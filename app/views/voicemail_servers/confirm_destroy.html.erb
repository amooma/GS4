<%= simple_form_for( @voicemail_server, :html => { :method => :delete } ) do |f| %>
	<%= f.error_messages %>
	<h2><%= t(:confirm_destroy_record, :model_name => t("activerecord.models.voicemail_server"))%></h2>
	<%= render 'show' %>
	<%= f.button :submit, t(:delete) if can?( :destroy, @voicemail_server ) %>
	<%= link_to t(:cancel), voicemail_servers_path if can?( :index, VoicemailServer ) %>
<% end %>