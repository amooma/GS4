<h1>Voicemail servers</h1>

<table>
  <tr>
    <th>SIP host</th>
    <th>SIP port</th>
    <th>Is on this node?</th>
    <th></th>
    <th></th>
  </tr>

<% @voicemail_servers.each do |voicemail_server| %>
  <tr>
    <td><%= voicemail_server.host %></td>
    <td><%= voicemail_server.port %></td>
    <td><%= voicemail_server.is_local ? "yes" : "no" %></td>
    <td><%= link_to 'Show', voicemail_server %></td>
    <td><%= button_to 'Destroy', voicemail_server, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New voicemail server', new_voicemail_server_path %>
