<h1><%= t(:call_queue) %></h1>

<div class="simple_form_show">

<p>
  <b><%= t(:name) %>:</b>
  <%= @call_queue.name %>
</p>

<p>
  <b><%= t(:uuid) %>:</b>
  <%= @call_queue.uuid %>
</p>

<p>
  <b><%= t(:extensions) %>:</b>
  <% @call_queue.extensions.each do |extension| %>
    <%= link_to "#{extension.extension}", call_queue_extension_path( @call_queue, extension ) %>,
  <% end %>
  <%= link_to t(:new_extension), new_call_queue_extension_path( @call_queue, {:destination => @call_queue.uuid}) %>
</p>

<% if @call_queue.extensions.count == 0 %>
  <div class="noticebox">
    <%= t(:call_queue_need_to_create_extension) %>
  </div>
<% end %>

</div>

<%= link_to t(:edit), edit_call_queue_path(@call_queue) %> |
<%= link_to t(:Go_to_list), call_queues_path %>
