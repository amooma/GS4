<%= simple_form_for( @personal_contact ) do |f| %>
	<%= f.error_messages %>
	
	<% if can?( :edit_uid, @personal_contact ) %>
		<%= f.input :user do %>
			<%= f.select( :user_id,
				@users.collect {|r| [ r.to_display, r.id ] },
				{ :include_blank => true, :selected => @personal_contact.user_id }
			) %>
		<% end %>
	<% else %>
		<%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
	<% end %>
	
	<%= f.input :lastname %>
	<%= f.input :firstname %>
	<%= f.input :phone_business , :as => :string %>
	<%= f.input :phone_mobile   , :as => :string %>
	<%= f.input :phone_private  , :as => :string %>
	<%= f.input :fax_business   , :as => :string %>
	<%= f.input :fax_private    , :as => :string %>
	
	<%= f.button :submit %>
<% end %>
