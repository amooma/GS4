<%= simple_form_for( @personal_contact, :html => { :method => :delete } ) do |f| %>
	<%= f.error_messages %>
	<h2><%= t(:confirm_destroy_record, :model_name => t("activerecord.models.personal_contact"))%></h2>
	<%= render 'show' %>
	<%= f.button :submit, t(:delete) if can?( :destroy, @personal_contact ) %>
	<%= link_to t(:cancel), personal_contacts_path if can?( :index, GlobalContact ) %>
<% end %>