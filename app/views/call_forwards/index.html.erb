<h1>Listing call_forwards</h1>

<table>
  <tr>
    <th>Sip account</th>
    <th>Source</th>
    <th>Call forward reason</th>
    <th>Destination</th>
    <th>Call timeout</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @call_forwards.each do |call_forward| %>
  <tr>
    <td>
      <% if call_forward.sip_account %>
        <%= call_forward.sip_account.caller_name %> (id <%= call_forward.sip_account_id %>)</td>
      <% end %>
    <td><%= call_forward.source %></td>
    <td><%= call_forward.call_forward_reason.value %></td>
    <td><%= call_forward.destination %></td>
    <td><%= call_forward.call_timeout %></td>
    <td><%= call_forward.active %></td>
    <td><%= link_to 'Show', call_forward %></td>
    <td><%= link_to 'Edit', edit_call_forward_path(call_forward) %></td>
    <td><%= button_to 'Destroy', call_forward, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

