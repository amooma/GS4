<h1><%= t(:listing_call_forwards) %></h1>

<table>
  <tr>
    <th><%= t(:sip_account) %></th>
    <th><%= t(:source) %></th>
    <th><%= t(:call_forward_reason) %></th>
    <th><%= t(:destination) %></th>
    <th><%= t(:call_timeout) %></th>
    <th><%= t(:active) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @call_forwards.each do |call_forward| %>
  <tr>
    <td><%
      if call_forward.sip_account
        %><%= call_forward.sip_account.caller_name %> <small>(ID <%= call_forward.sip_account_id %>)</small><%
      end
    %></td>
    <td><%= call_forward.source %></td>
    <td><%= call_forward.call_forward_reason ? call_forward.call_forward_reason.value : '?' %></td>
    <td><%= call_forward.destination %></td>
    <td><%= call_forward.call_timeout %></td>
    <td><%= call_forward.active ? t(:yes_lowercase) : t(:no_lowercase) %></td>
    <td><%= link_to t(:show), call_forward if can?( :show, call_forward ) %></td>
    <td><%= link_to t(:edit), edit_call_forward_path(call_forward) if can?( :edit, call_forward ) %></td>
    <td><%= button_to t(:destroy), call_forward, :confirm => t(:are_you_sure), :method => :delete if can?( :destroy, call_forward ) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:new_call_forward), new_call_forward_path if can?( :new, CallForward ) %>
