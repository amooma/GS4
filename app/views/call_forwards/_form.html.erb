<%= simple_form_for( @call_forward ) do |f| %>
	<%= f.error_messages %>
	
	<%= f.input :sip_account do %>
		<%= f.select( :sip_account_id,
			@sip_accounts.collect { |r| [ r.to_display, r.id ] },
			{ :include_blank => (@sip_accounts.count > 1), :selected => @call_forward.sip_account_id }
		) %>
	<% end %>
	<%= f.input :source %>
	<%= f.association :call_forward_reason, :label_method => :value, :include_blank => true %>
	<%= f.input :call_timeout %>
	<%= f.input :destination %>
	<%= f.input :active %>
	
	<%= f.button :submit %>
<% end %>
