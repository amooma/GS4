<%= simple_form_for @call_forward do |f| %>
  <% if @call_forward.errors.any? %>
    <div id="error_explanation">
      <h2><%= t(:errors_model_not_saved ,:errors_count => pluralize(@call_forward.errors.count, "error"), :model_name => t(:call_forward)) %>:</h2>

      <ul>
      <% @call_forward.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.association :sip_account, :label_method => :caller_name %>
  </div>
  <div class="field">
    <%= f.label :source, t(:source) %><br />
    <%= f.text_field :source %>
  </div>
  <div class="field">
    <%= f.association :call_forward_reason, :label_method => :value, :include_blank => false %>
  </div>
  <div class="field">
    <%= f.label :destination, t(:destination) %><br />
    <%= f.text_field :destination %>
  </div>
  <div class="field">
    <%= f.label :call_timeout, t(:call_timeout) %><br />
    <%= f.text_field :call_timeout %>
  </div>
  <div class="field">
    <%= f.check_box :active %>
    <%= f.label :active, t(:active) %>
  </div>
  <div class="actions">
    <%= f.submit(t(:save)) %>
  </div>
<% end %>
