
<%= render :partial => 'show_single_phone', :locals => {:phone_model => @phone_model} %>

<%= link_to t(:edit), edit_phone_model_path(@phone_model) if can?( :edit, @phone_model ) %>


<h2><%= t(:listing_phones) %></h2>
<p>
  <%= link_to t(:new_phone), new_phone_model_phone_path(@phone_model) if can?( :create, Phone ) %>	
</p>

<% if @phone_model.phones.count > 0 %>
<%= render :partial => 'phones/table_of_phones', :locals => {:phones => @phone_model.phones} %>
<% end %>
