<%= simple_form_for( @ldap_import_session ) do |f| %>
	<%= f.error_notification %>
	
	<%= f.input :host %>
	<%= f.input :version, :hint => '2 oder 3' %>
	<%= f.input :ssl, :as => :radio, :label => 'SSL' %>
	<%= f.input :port %>
	<%= f.input :bind_dn %>
	<%= f.input :password %>
	<%= f.input :base_dn %>
	<%= f.input :cn %>
	
	<%= f.button :submit %>
<% end %>
