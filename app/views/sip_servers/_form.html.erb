<%= simple_form_for( @sip_server ) do |f| %>
	<%= f.error_messages %>
	
	<%= f.input :host %>
	<%= f.input :port %>
	<%= f.input :is_local %>
	<%= f.input :last_sip_server do %>
		<%= f.select( :last_sip_server_id,
			@sip_servers.collect {|r| [ "#{r.host} (ID #{r.id})", r.id ] },
			{ :include_blank => true }
		) %>
	<% end %>
	
	<%= f.button :submit %>
<% end %>
