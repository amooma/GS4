<h1><%= t(:listing_sip_servers)%></h1>

<table>
  <tr>
    <th><%= t(:sip_host) %></th>
    <th><%= t(:sip_port) %></th>
    <th><%= t(:is_local) %></th>
    <th></th>
    <th></th>
  </tr>

<% @sip_servers.each do |sip_server| %>
  <tr>
    <td><%= sip_server.host %></td>
    <td><%= sip_server.port %></td>
    <td><%= sip_server.is_local ? t(:yes_lowercase) : t(:no_lowercase) %></td>
    <td><%= link_to t(:show), sip_server %></td>
    <td><%= link_to t(:destroy), confirm_destroy_sip_server_path(sip_server) if can?( :destroy, sip_server ) %></td>
  </tr>
<% end %>
</table>

<br />

