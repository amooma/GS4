<h1>Listing SIP servers</h1>

<table>
  <tr>
    <th>Host</th>
    <th>Port</th>
    <th>Is on this node</th>
    <th></th>
    <th></th>
  </tr>

<% @sip_servers.each do |sip_server| %>
  <tr>
    <td><%= sip_server.host %></td>
    <td><%= sip_server.port %></td>
    <td><%= sip_server.is_local %></td>
    <td><%= link_to 'Show', sip_server %></td>
    <td><%= button_to 'Destroy', sip_server, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

