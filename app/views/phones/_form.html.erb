<%= simple_form_for( @phone ) do |f| %>
	<%= f.error_messages %>
	
	<%= f.input :mac_address %>
	<%= f.input :phone_model do %>
		<%= f.select( :phone_model_id,
			@phone_models.collect {|r| [ r.name, r.id ] },
			{ :include_blank => false, :selected => @phone.phone_model_id }
		) %>
	<% end %>
	<%= f.input :ip_address %>
	<%= f.input :http_user %>
	<%= f.input :http_password %>
	
	<%= f.button :submit %>
<% end %>
