<%= simple_form_for( @call_log ) do |f| %>
	<%= f.error_messages %>
	
	<%= f.input :sip_account do %>
		<%= f.select( :sip_account_id,
			@sip_accounts.collect { |r| [ "#{r.caller_name} (ID #{r.id})", r.id ] },
			{ :include_blank => (@sip_accounts.count > 1), :selected => @call_log.sip_account_id }
		) %>
	<% end %>
	<%= f.input :source %>
	<%= f.input :source_name %>
	<%= f.input :destination %>
	<%= f.input :destination_name %>
	<%= f.input :call_type %>
	<%= f.input :disposition %>
	<%= f.input :forwarded_to %>
	
	<%= f.button :submit %>
<% end %>
