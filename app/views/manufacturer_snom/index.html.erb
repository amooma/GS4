<% if ! @phones.empty? %>
<h1>Manufacturer <%= @phones.first.phone_model.manufacturer.name%> </h1>
<table> 
<th>Phone ID</th>
<th>Phone model</th>
<th>MAC</th>
<% @phones.each do |p|%>

<tr class="<%= cycle("even", "odd") %>"	> 
<td><%= p.id %></td>
<td><%= p.phone_model.name%></td>
<td><%= link_to "#{p.mac_address}", "/settings-#{p.mac_address}"%></td>


<% end %>
</tr>
</table>
<% else %>
<h1>No phones for this manufacturer found</h1>
<% end %>