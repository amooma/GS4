<h1>Listing conferences</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Pin</th>
    <th>Extension</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @conferences.each do |conference| %>
  <tr>
    <td><%= conference.name %></td>
    <td><%= conference.pin %></td>
    <td>
    <% if !conference.extensions.nil? %>
      <ul>
      <% conference.extensions.each do |extension| %>
        <li><%= link_to extension.extension, conference_extension_path(conference, extension) %></li>
      <% end %>
      </ul>
    <% end %>
    </td>
    <td><%= link_to 'Show', conference %></td>
    <td><%= link_to 'Edit', edit_conference_path(conference) %></td>
    <td><%= button_to 'Destroy', conference, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Conference', new_conference_path %>
