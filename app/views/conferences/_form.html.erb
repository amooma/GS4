<%= simple_form_for( @conference ) do |f| %>
	<%= f.error_messages %>
	
	<% if can?( :edit_uid, @conference ) %>
		<%= f.input :user do %>
			<%= f.select( :user_id,
				@users.collect {|r| [ r.to_display, r.id ] },
				{ :include_blank => true, :selected => @conference.user_id }
			) %>
		<% end %>
	<% else %>
		<%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
	<% end %>
	
	<%= f.input :name %>
	<%= f.input :pin %>
	<%= f.input :uuid, :as => :hidden %>
	
	<%= f.simple_fields_for :extensions do |extension| %>
		<%= extension.input :extension, :hint => t('simple_form.hints.extension.extension') %>
		<%= extension.input :destination, :as => :hidden %>
		<%= extension.input :active, :as => :hidden %>
	<% end %>
	
	<%= f.button :submit %>
<% end %>
