
<div class="simple_form_show">

<p>
  <b><%= t(:name) %>:</b>
  <%= @conference.name %>
</p>

<p>
  <b><%= t(:pin) %>:</b>
  <%= @conference.pin %>
</p>

<p>
  <b><%= t(:extensions) %>:</b>
  <% @conference.extensions.each do |extension| %>
    <%= link_to "#{extension.extension}", conference_extension_path( @conference, extension ) %>,  
  <% end %>
</p>

</div>
