<%= simple_form_for( @extension, :html => { :method => :delete } ) do |f| %>
	<%= f.error_messages %>
	<h2><%= t(:confirm_destroy_record, :model_name => t("activerecord.models.extension"))%></h2>
	<%= render 'show' %>
	<%= f.button :submit, t(:delete) if can?( :destroy, @extension ) %>
	<%= link_to t(:cancel), extensions_path if can?( :index, Extension ) %>
<% end %>