<h1><%= t(:listing_extensions) %></h1>

<table>
  <tr>
    <th><%= t(:extension) %></th>
    <th><%= t(:destination) %></th>
    <th><%= t(:active) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @extensions.each do |extension| %>
  <tr>
    <td><%= extension.extension %></td>
    <td><%= extension.destination %></td>
    <td><%= extension.active %></td>
    <td><%= link_to t(:show), extension %></td>
    <td><%= link_to t(:edit), edit_extension_path(extension) %></td>
    <td><%= button_to t(:destroy), extension, :confirm => t(:are_you_sure), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:new_extension), new_extension_path %>
