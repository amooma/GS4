<%= simple_form_for( @extension ) do |f| %>
	<%= f.error_messages %>
	
	<%= f.input :extension %>
	<%= f.input :destination, :input_html => { :readonly => ! @extension.destination.nil? && @extension.errors.count < 1 } %>
	<%= f.input :active %>
	<%= f.input :type, :collection => @extension.types, :as => :select, :input_html => { :value => @extension.type } %>
	
	<%= f.button :submit %>
<% end %>
