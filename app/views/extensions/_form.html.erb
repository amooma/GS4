<%= simple_form_for( @extension ) do |f| %>
	<%= f.error_messages %>
	<% no_edit = ! @extension.destination.nil? && @extension.errors.count < 1 %>
	<%= f.input :extension %>
	<%= f.input :destination, :required => false, :input_html => { :disabled => no_edit } %>
	<%= f.input :type, :collection => @extension.types, :as => :select, :include_blank => no_edit, :input_html => { :value => @extension.type, :disabled => no_edit } %>
	<%= f.input :active %>
	
	<%= f.button :submit %>
<% end %>
