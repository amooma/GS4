<%= simple_form_for( @fax_document, :html => { :method => :delete } ) do |f| %>
	<%= f.error_messages %>
	<h2><%= t(:confirm_destroy_record, :model_name => t("activerecord.models.fax_document"))%></h2>
	<%= render 'show' %>
	<%= f.button :submit, t(:delete) if can?( :destroy, @fax_document ) %>
	<%= link_to t(:cancel), fax_documents_path if can?( :index, FaxDocument ) %>
<% end %>