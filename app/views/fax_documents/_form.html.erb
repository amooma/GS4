<%= simple_form_for( @fax_document, :html => { :multipart => true }) do |f| %>
	<%= f.error_messages %>
	
	<% if @edit_document %>
		<%= @fax_document.file %>
	<% else %>
		<%= f.input :file do %>
			<%= f.file_field :upload %>
		<% end %>
	<% end %>
	
	<%= f.input :destination %>
	<%= f.input :outgoing, :as => :hidden, :input_html => { :value => "true" } %>
	
	<%= f.button :submit %>
<% end %>
