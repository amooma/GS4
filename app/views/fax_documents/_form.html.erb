    <% end %>
  </div>
  
  <div class="field">
    <%= f.label :destination %><br />
    <%= f.text_field :destination %>
  </div>

  <div class="actions">
    <%= f.submit('Send') %>
  </div>
  <%= f.hidden_field :outgoing, :value => true %>
<% end %>
