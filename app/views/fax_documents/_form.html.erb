      <ul>
      <% @fax_document.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :upload %><br />
    <% if @fax_document.file.nil? %>
      <%= f.file_field :upload %>
