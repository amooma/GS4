<h1><%= t(:fax_documents) %></h1>

<table>
  <tr>
	<th></th>
    <th><%= t(:document) %></th>
    <th><%= t(:fax) %></th>
    <th><%= t(:destination) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fax_documents.each do |fax_document| %>
  <tr>
    <td>
    <% if fax_document.outgoing %>
      OUT
    <% else %>
      IN
    <% end %>
    </td>
    <td><%= fax_document.file %></td>
    <td>
    <% if ! fax_document.file.blank? %>
      <%= link_to File.basename(fax_document.file, File.extname(fax_document.file)) + '.tif', fax_document_path(fax_document, :format => 'tif') %>
    <% end %>
    </td>
    <td><%= fax_document.destination %></td>
    <td><%= link_to t(:show), fax_document %></td>
    <td><%= link_to t(:edit), edit_fax_document_path(fax_document) %></td>
    <td><%= button_to t(:destroy), fax_document, :confirm => t(:are_you_sure), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:new_fax), new_fax_document_path %>
