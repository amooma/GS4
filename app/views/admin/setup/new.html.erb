
<h1>Create first User</h1>

<%= form_for :user,  :url => { :action => "create" } do |f| %>
<div class="field">
    <%= f.label :username %>
    <br/>
    <%= f.text_field :username %>
</div>
<div class="field">
    <%= f.label :password %>
    <br/>
    <%= f.password_field :password %>
</div>
<div class="field">
    <%= f.label :password_confirmation, 'Password confirmation' %>
    <br/>
    <%= f.password_field :password_confirmation %>
</div>
<div class="field">
    <%= f.label :gn, 'First name' %>
    <br/>
    <%= f.text_field :gn %>
</div>
<div class="field">
    <%= f.label :sn, 'Last name' %>
    <br/>
    <%= f.text_field :sn %>
</div>
<div class="field">
    <%= f.label :email %>
	<br/>
    <%= f.text_field :email %>
</div>
<div class="actions">
    <%= f.submit %>
</div>
<%= link_to 'Back', admin_user_index_path %>

<% end %>