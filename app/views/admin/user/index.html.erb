<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>First name</th>
    <th>Last name</th>
    <th></th>
	<th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
	<td><%= user.gn %></td>
	<td><%= user.sn%></td>
    <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
	<% if user.id != current_user.id %>
    <td><%= link_to 'Destroy', admin_user_path(user), :confirm => 'Are you sure?', :method => :delete %></td>
	<% else %>
	<td>Current User</td>
	<% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_admin_user_path %>

