<h1><%= t(:listing_users) %></h1>

<table>
  <tr>
    <th><%= t(:username) %></th>
    <th><%= t(:email_address) %></th>
    <th><%= t(:given_name) %></th>
    <th><%= t(:surname) %></th>
    <th></th>
	<th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
	<td><%= user.gn %></td>
	<td><%= user.sn%></td>
    <td><%= link_to t(:edit), edit_admin_user_path(user) %></td>
	<% if user.id != current_user.id %>
    <td><%= button_to t(:destroy), admin_user_path(user), :confirm => t(:are_you_sure), :method => :delete %></td>
	<% else %>
	<td><%= t(:current_user) %></td>
	<% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:new_user), new_admin_user_path %>

