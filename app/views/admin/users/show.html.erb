<p>
  <b><%= t(:username) %>:</b>
  <%= @user.username %>
</p>

<p>
  <b><%= t(:email_address) %>:</b>
  <%= @user.email %>
</p>

<p>
  <b><%= t(:given_name) %>:</b>
  <%= @user.gn %>
</p>

<p>
  <b><%= t(:surname) %>:</b>
  <%= @user.sn %>
</p>

<p>
  <b><%= t(:role) %>:</b>
  <%= User::ROLES[ @user.role ].to_s.sub(/^(\w)/) {|s| s.capitalize}%>
</p>


<%= link_to t(:edit), edit_admin_user_path(@user) %> |
<%= link_to t(:back), admin_users_path %>
