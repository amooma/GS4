<%= simple_form_for( @user,:url => { :action => "destroy" }, :html => { :method => :delete } ) do |f| %>
	<%= f.error_messages %>
	<h2><%= t(:confirm_destroy_record, :model_name => t("activerecord.models.user"))%></h2>
	<%= render 'show' %>
	<%= f.button :submit, t(:delete) if can?( :destroy, @user ) %>
	<%= link_to t(:cancel), admin_users_path if can?( :index, User ) %>
<% end %>