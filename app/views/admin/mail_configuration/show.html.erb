<% page_title t(:mail_configuration) %>
<h1><%= t(:mail_configuration) %></h1>

<div class="simple_form_show">

<%= t('email_smarthost') %><br />
<br />

<p>
  <b><%= t('fax_send_mail') %>:</b>
  <%= @email_configuration.fax_send_mail ? t(:yes_lowercase) : t(:no_lowercase) %>
</p>

<p>
  <b><%= t('smarthost.hostname') %>:</b>
  <%= @email_configuration.smarthost_hostname %>
</p>

<p>
  <b><%= t('smarthost.port') %>:</b>
  <%= @email_configuration.smarthost_port %>
</p>

<p>
  <b><%= t('smarthost.domain') %>:</b>
  <%= @email_configuration.smarthost_domain %>
</p>

<p>
  <b><%= t('smarthost.username') %>:</b>
  <%= @email_configuration.smarthost_username %>
</p>

<p>
  <b><%= t('smarthost.password') %>:</b>
  <%= "*" * @email_configuration.smarthost_password.to_s.length %>
</p>

<p>
  <b><%= t('smarthost.from_address') %>:</b>
  <%= @email_configuration.smarthost_from_address %>
</p>

<br />
<%= t('email_pop3') %><br />
<br />

<p>
  <b><%= t('fax_pop3') %>:</b>
  <%= @email_configuration.fax_pop3 ? t(:yes_lowercase) : t(:no_lowercase) %>
</p>

<p>
  <b><%= t('mailserver.hostname') %>:</b>
  <%= @email_configuration.mailserver_hostname %>
</p>

<p>
  <b><%= t('mailserver.port') %>:</b>
  <%= @email_configuration.mailserver_port %>
</p>

<p>
  <b><%= t('mailserver.username') %>:</b>
  <%= @email_configuration.mailserver_username %>
</p>

<p>
  <b><%= t('mailserver.password') %>:</b>
  <%= "*" * @email_configuration.mailserver_password.to_s.length %>
</p>

</div>

<%= link_to t(:edit), admin_mail_configuration_path %>
