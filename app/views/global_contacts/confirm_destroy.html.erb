<%= simple_form_for( @global_contact, :html => { :method => :delete } ) do |f| %>
	<%= f.error_messages %>
	<h2><%= t(:confirm_destroy_record, :model_name => t("activerecord.models.global_contact"))%></h2>
	<%= render 'show' %>
	<%= f.button :submit, t(:delete) if can?( :destroy, @global_contact ) %>
	<%= link_to t(:cancel), global_contacts_path if can?( :index, GlobalContact ) %>
<% end %>