<%= simple_form_for( @network_setting ) do |f| %>
	<%= f.error_messages %>
	
	<%= f.input :dhcp_client %>
	<hr />
	<%= f.input :ip_address %>
	<%= f.input :netmask %>
	<%= f.input :gateway %>
	<%= f.input :name_server %>
	<%= f.input :interface, :as => :hidden, :input_html => { :value => 'eth0' } %>
	<hr />
	<%= f.input :start_dhcp_server %>
	<%= f.input :dhcp_range_start %>
	<%= f.input :dhcp_range_end %>
	
	<%= f.button :submit, :value => t(:save_reboot) %>
<% end %>
